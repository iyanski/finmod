{
    "name": "finmod-ai-platform",
    "version": "1.0.0",
    "description": "AI-assisted financial modeling platform for generating 3-statement financial models",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "dependencies": {
        "@types/node": "^20.0.0",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "archiver": "^6.0.1",
        "bcryptjs": "^2.4.3",
        "better-sqlite3": "^9.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "csv-writer": "^1.6.0",
        "exceljs": "^4.3.0",
        "formidable": "^3.5.0",
        "jsonwebtoken": "^9.0.2",
        "lodash": "^4.17.21",
        "moment": "^2.29.4",
        "multer": "^1.4.5-lts.1",
        "next": "14.0.0",
        "openai": "^4.20.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "sqlite3": "^5.1.6",
        "typescript": "^5.0.0",
        "uuid": "^9.0.0",
        "zod": "^3.22.0"
    },
    "devDependencies": {
        "@types/archiver": "^6.0.2",
        "@types/bcryptjs": "^2.4.2",
        "@types/formidable": "^3.4.5",
        "@types/jest": "^29.5.8",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/lodash": "^4.14.195",
        "@types/multer": "^1.4.7",
        "@types/uuid": "^9.0.2",
        "autoprefixer": "^10.4.21",
        "eslint": "^8.0.0",
        "eslint-config-next": "14.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "node-mocks-http": "^1.12.1",
        "postcss": "^8.5.6",
        "prettier": "^3.0.0",
        "tailwindcss": "^3.4.17",
        "ts-jest": "^29.1.1"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1"
        },
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!src/**/*.d.ts",
            "!src/pages/_app.tsx",
            "!src/pages/_document.tsx"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 70,
                "functions": 70,
                "lines": 70,
                "statements": 70
            }
        },
        "setupFilesAfterEnv": [
            "<rootDir>/jest.setup.js"
        ]
    }
}
